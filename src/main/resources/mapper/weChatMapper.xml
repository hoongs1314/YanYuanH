<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.Beam.mapper.weChatMapper">

    <!--添加用户信息-->
    <insert id="insertCustomer" parameterType="java.util.Map">
        insert into customerInfomation (user_name,user_dormitory,user_phone,user_sex)
        values (#{userName},#{userRoom},#{userPhone},#{userSex})
    </insert>

    <!--查询商家-->
    <select id="findMenu" resultType="java.util.Map">
        select *
        from merchant
    </select>

    <!--查询商家详细页-->
    <select id="findMerchant" resultType="java.util.Map" parameterType="java.util.Map">
        select *
        <if test=" merchantId = 1111">
            from budaimo,merchant
            where merchant.merchant_id = '1111'
        </if>
