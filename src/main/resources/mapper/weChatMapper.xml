            <!--from dapanji,merchant-->
            <!--where merchant.merchant_id = '1112'-->
        <!--</if>-->
        <!--<if test=" merchantId = 1113">-->
        <!--from budaimo,merchant-->
        <!--where merchant.merchant_id = '1113'-->
    <!--</if>-->


    </select>

    <!--添加订单信息-->
    <insert id="insertOrder" parameterType="java.util.Map">
        insert into "order"(order_time,order_menu,cus_name,cus_phone,cus_dormitory,cus_sex,remark,order_merchant)
        value (#{orderTime},#{orderMenu},#{userName},#{userPhone},#{userRoom},#{userSex},#{remark},#{orderMerchant})
    </insert>
</mapper>